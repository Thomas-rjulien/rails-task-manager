<h1><%= @task.title %></h1>

<div class="box-task">
<p><%= @task.details %></p>
</div>

<div class="box-form">
  <% if @task.completed == true %>
      <input type="checkbox" checked disabled>
      <%= 'this task is completed' %>
  <% else %>
    <input type="checkbox" disabled>
    <%= 'this task is not completed' %>
  <% end %>
</div>
<p><%= link_to 'Back to list', tasks_path %></p>
<p><%= link_to "Edit the task", tasks_edit_path %></p>
<p><%= link_to "Delete", tasks_destroy_path,
      method: :delete,
      data: { confirm: "Are you sure?" } %></p>
